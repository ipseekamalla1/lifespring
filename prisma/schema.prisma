datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())

  // Relations
  patient Patient?
  doctor  Doctor?
}

model Patient {
  id        String   @id @default(uuid())
  userId    String   @unique
  name      String?
  user      User     @relation(fields: [userId], references: [id])
}

model Doctor {
  id             String   @id @default(uuid())
  userId         String   @unique
  name           String?
  department     String?
  specialization String?
  phone          String?
  experience     Int?

  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  PATIENT
  DOCTOR
  ADMIN
}
